<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/secondary"
    android:paddingVertical="4dp"
    android:layout_marginVertical="4dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/noti_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_randomicon"
        app:civ_border_color="@color/selected"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noti_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Imtiaz Bhuiyan"
        app:layout_constraintBottom_toBottomOf="@+id/noti_profile"
        app:layout_constraintStart_toEndOf="@+id/noti_profile"
        app:layout_constraintTop_toTopOf="@+id/noti_profile"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/noti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Has Commented in your post"
        app:layout_constraintBottom_toBottomOf="@+id/noti_name"
        app:layout_constraintStart_toEndOf="@+id/noti_name"
        app:layout_constraintTop_toTopOf="@+id/noti_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6:44 PM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="View Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/noti_name"
        app:layout_constraintStart_toStartOf="@+id/noti_name"
        app:layout_constraintTop_toBottomOf="@+id/noti_name" />
</androidx.constraintlayout.widget.ConstraintLayout>